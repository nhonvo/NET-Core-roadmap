@model _1.MVC.Models.Book

<h2>Edit Book</h2>

<form asp-controller="book" asp-action="edit" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
    </div>

    <div class="form-group">
        <label for="Year">Year:</label>
        <input type="number" class="form-control" id="Year" name="Year" value="@Model.Year" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>